<Page x:Class="VoiceLinkNative.Views.ServersView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="Transparent"
      Title="Servers">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="0,0,16,0">
            <!-- Header -->
            <TextBlock Text="Server Management" FontSize="28" FontWeight="Bold"
                       Foreground="{StaticResource TextBrush}" Margin="0,0,0,8"
                       AutomationProperties.HeadingLevel="Level1"/>
            <TextBlock Text="Connect to VoiceLink servers and manage authentication"
                       Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,24"/>

            <!-- Server Options -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Quick Connect" FontSize="18" FontWeight="SemiBold"
                               Foreground="{StaticResource TextBrush}" Margin="0,0,0,16"
                               AutomationProperties.HeadingLevel="Level2"/>

                    <WrapPanel>
                        <Button Content="Main Server (Primary)" Style="{StaticResource PrimaryButton}"
                                Command="{Binding ConnectMainCommand}" Margin="0,0,8,8"
                                AutomationProperties.Name="Connect to main server, this is the primary public server"/>
                        <Button Content="Local Server" Style="{StaticResource SecondaryButton}"
                                Command="{Binding ConnectLocalCommand}" Margin="0,0,8,8"
                                AutomationProperties.Name="Connect to local server on your machine"/>
                        <Button Content="Disconnect" Style="{StaticResource SecondaryButton}"
                                Command="{Binding DisconnectCommand}" Margin="0,0,8,8"
                                IsEnabled="{Binding IsConnected}"
                                AutomationProperties.Name="Disconnect from current server"/>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <!-- Custom Server -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Custom Server" FontSize="18" FontWeight="SemiBold"
                               Foreground="{StaticResource TextBrush}" Margin="0,0,0,16"
                               AutomationProperties.HeadingLevel="Level2"/>

                    <TextBlock Text="Server URL" FontSize="12"
                               Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,4"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Text="{Binding CustomServerUrl, UpdateSourceTrigger=PropertyChanged}"
                                 AutomationProperties.Name="Custom server URL"
                                 AutomationProperties.HelpText="Enter the URL of a custom VoiceLink server"/>
                        <Button Grid.Column="1" Content="Connect" Style="{StaticResource PrimaryButton}"
                                Command="{Binding ConnectCustomCommand}" Margin="8,0,0,0"
                                AutomationProperties.Name="Connect to custom server"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Authentication -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Authentication" FontSize="18" FontWeight="SemiBold"
                               Foreground="{StaticResource TextBrush}" Margin="0,0,0,16"
                               AutomationProperties.HeadingLevel="Level2"/>

                    <!-- Authenticated User Info -->
                    <StackPanel Visibility="{Binding IsAuthenticated, Converter={StaticResource BoolToVisibilityConverter}}"
                                Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Ellipse Width="40" Height="40" Fill="{StaticResource PrimaryBrush}" Margin="0,0,12,0"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{Binding AuthenticatedUsername}" FontSize="16" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextBrush}"/>
                                <TextBlock Text="Authenticated" FontSize="12"
                                           Foreground="{StaticResource AccentGreenBrush}"/>
                            </StackPanel>
                        </StackPanel>
                        <Button Content="Logout" Style="{StaticResource SecondaryButton}"
                                Command="{Binding LogoutCommand}"
                                AutomationProperties.Name="Logout from current account"/>
                    </StackPanel>

                    <!-- Auth Options (when not authenticated) -->
                    <StackPanel Visibility="{Binding IsAuthenticated, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <TextBlock Text="Choose an authentication method:" FontSize="14"
                                   Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,12"/>

                        <!-- Pairing Code -->
                        <Border BorderBrush="#404060" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="Pairing Code" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextBrush}" Margin="0,0,0,4"/>
                                <TextBlock Text="Enter a pairing code from another device"
                                           Foreground="{StaticResource SecondaryTextBrush}" FontSize="12" Margin="0,0,0,8"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" Text="{Binding PairingCode, UpdateSourceTrigger=PropertyChanged}"
                                             AutomationProperties.Name="Pairing code"
                                             AutomationProperties.HelpText="Enter the 6-digit pairing code"/>
                                    <Button Grid.Column="1" Content="Pair" Style="{StaticResource PrimaryButton}"
                                            Command="{Binding SubmitPairingCodeCommand}" Margin="8,0,0,0"
                                            AutomationProperties.Name="Submit pairing code"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Email Verification -->
                        <Border BorderBrush="#404060" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                            <StackPanel>
                                <TextBlock Text="Email Verification" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextBrush}" Margin="0,0,0,4"/>
                                <TextBlock Text="Verify your identity with email"
                                           Foreground="{StaticResource SecondaryTextBrush}" FontSize="12" Margin="0,0,0,8"/>

                                <!-- Email input -->
                                <StackPanel Visibility="{Binding ShowEmailVerification, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                                 AutomationProperties.Name="Email address"/>
                                        <Button Grid.Column="1" Content="Send Code" Style="{StaticResource PrimaryButton}"
                                                Command="{Binding RequestEmailVerificationCommand}" Margin="8,0,0,0"
                                                AutomationProperties.Name="Send verification code to email"/>
                                    </Grid>
                                </StackPanel>

                                <!-- Code input -->
                                <StackPanel Visibility="{Binding ShowEmailVerification, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <TextBlock Text="Enter the code sent to your email" FontSize="12"
                                               Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,8"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" Text="{Binding VerificationCode, UpdateSourceTrigger=PropertyChanged}"
                                                 AutomationProperties.Name="Verification code"/>
                                        <Button Grid.Column="1" Content="Verify" Style="{StaticResource PrimaryButton}"
                                                Command="{Binding SubmitEmailCodeCommand}" Margin="8,0,0,0"
                                                AutomationProperties.Name="Submit verification code"/>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Mastodon OAuth -->
                        <Border BorderBrush="#404060" BorderThickness="1" CornerRadius="8" Padding="16">
                            <StackPanel>
                                <TextBlock Text="Mastodon" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextBrush}" Margin="0,0,0,4"/>
                                <TextBlock Text="Authenticate with your Mastodon account"
                                           Foreground="{StaticResource SecondaryTextBrush}" FontSize="12" Margin="0,0,0,8"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" Text="{Binding MastodonInstance, UpdateSourceTrigger=PropertyChanged}"
                                             AutomationProperties.Name="Mastodon instance"
                                             AutomationProperties.HelpText="Enter your Mastodon instance URL, e.g., mastodon.social"/>
                                    <Button Grid.Column="1" Content="Login" Style="{StaticResource PrimaryButton}"
                                            Command="{Binding StartMastodonAuthCommand}" Margin="8,0,0,0"
                                            AutomationProperties.Name="Login with Mastodon"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Connection Status -->
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Connection Status" FontSize="18" FontWeight="SemiBold"
                               Foreground="{StaticResource TextBrush}" Margin="0,0,0,16"
                               AutomationProperties.HeadingLevel="Level2"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Status:" FontWeight="SemiBold"
                                   Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,16,8"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ServerStatus}"
                                   Foreground="{StaticResource TextBrush}"
                                   AutomationProperties.LiveSetting="Polite"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Server:" FontWeight="SemiBold"
                                   Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,16,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ConnectedServer}"
                                   Foreground="{StaticResource TextBrush}"/>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
