<Application x:Class="VoiceLinkNative.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Color Palette -->
            <Color x:Key="PrimaryColor">#667eea</Color>
            <Color x:Key="SecondaryColor">#764ba2</Color>
            <Color x:Key="BackgroundColor">#1a1a2e</Color>
            <Color x:Key="SurfaceColor">#16213e</Color>
            <Color x:Key="TextColor">#ffffff</Color>
            <Color x:Key="SecondaryTextColor">#a0a0a0</Color>
            <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
            <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
            <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
            <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
            <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
            <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>